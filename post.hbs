{{!< default}}
{{#post}}
{{#if feature_image}}
<section class="uk-height-medium uk-cover-container uk-clearfix">
<img src="{{img_url feature_image size="l"}}" alt="{{title}}" title="{{title}}" data-uk-parallax="y:300;blur:80;media:@s;" data-uk-cover>
	<div class="uk-overlay uk-overlay-primary uk-position-cover uk-light">
		<div class="uk-width-4-5@s uk-width-3-4@m uk-width-3-5@l uk-container uk-container-center uk-position-bottom uk-margin-medium-bottom uk-animation-slide-bottom">
			<h1 class="uk-article-title uk-heading-divider uk-margin-small">{{title}}</h1>
			<p class="uk-article-meta uk-margin-remove">Written by {{#primary_author}}
				<span><a href="{{url}}" title="{{name}}" class="uk-link-reset">{{name}}</a></span>{{/primary_author}} on
				<time datetime="{{date format="YYYY-MM-DD"}}" content="{{date format="YYYY-MM-DD"}}">{{date format="MMMM, DD YYYY"}}</time>
			</p>
		</div>
	</div>
</section>
{{/if}}	

<main class="uk-section uk-clearfix shade1">
<article class="uk-container uk-container-center uk-width-4-5@s uk-width-3-4@m uk-width-3-5@l uk-article {{post_class}}" role="main">
{{^if feature_image}}
{{#if featured}}
<span data-uk-icon="icon:bookmark;ratio:0.7" class="uk-align-right uk-margin-remove-adjacent uk-text-muted" data-uk-scrollspy="cls:uk-animation-fade;repeat:true"></span>
{{/if}}
<h1 class="uk-article-title uk-heading-divider">{{title}}</h1>
<p class="uk-text-meta uk-margin-medium-bottom"> Written by {{#primary_author}}
	<span><a href="{{url}}" title="{{name}}" class="uk-text-meta">{{name}}</a></span>{{/primary_author}} on
	<time datetime="{{date published_at format='YYYY-MM-DD'}}" content="{{date published_at format='YYYY-MM-DD'}}">{{date published_at format='MMMM, DD YYYY'}}</time>
</p>	
{{/if}}
{{content}}
{{#if tags}}
{{> tags}}
{{/if}}

{{!--  Sharing Buttons  --}}
{{#if @custom.show_share_buttons}}
{{> share}}
{{/if}}

{{!--  Author Bio  --}}
{{#if @custom.show_author}}
{{#primary_author}}
{{> authorbio}}
{{/primary_author}}
{{/if}}

{{!--  Disqus Comments  --}}
{{#if @custom.disqus_shortname}}
{{> disqus}}
{{/if}}
</article>
</main>

{{!--  Related Posts  --}}
{{#if @custom.show_related_posts}}
{{> post-next-prev}}
{{/if}}

{{/post}}
