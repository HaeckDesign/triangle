{
    "name": "triangle",
    "description": "The Triangle Ghost Theme is a clean & responsive theme built for Ghost CMS. This minimal Ghost theme features a UIKit core, responsive layout, fixed menu, Disqus comments, slick animations and much more.",
    "demo": "https://demo.haeckdesign.com/triangle",
    "version": "3.0.0",
    "engines": {
        "ghost": ">=1.2.0"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg",
        "mobile": "assets/screenshot-mobile.jpg"
    },
    "author": {
        "name": "Haeck Design",
        "email": "inbox@haeckdesign.com",
        "url": "https://haeckdesign.com"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Magazine"
        ]
    },
    "keywords": [
        "triangle",
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://gitlab.com/HaeckDesign/triangle-ghost-theme.git"
    },
    "bugs": "https://gitlab.com/HaeckDesign/triangle-ghost-theme/-/issues",
    "config": {
        "posts_per_page": 6,
        "image_sizes": {
            "s": {
                "width": 400
            },
            "m": {
                "width": 800
            },
            "l": {
                "width": 1600
            }
        },
        "custom": {
            "navigation_layout": {
                "type": "select",
                "options": ["Logo on the left", "Logo in the middle"],
                "default": "Logo on the left"
            },
            "enable_search": {
                "type": "boolean",
                "default": false
            },
            "include_pagination": {
                "type": "boolean",
                "default": false
            },
            "instagram_link": {
                "type": "text"
            },
            "pinterest_link": {
                "type": "text"
            },
            "tumblr_link": {
                "type": "text"
            },
            "tiktok_link": {
                "type": "text"
            },
            "youtube_link": {
                "type": "text"
            },
            "show_share_buttons": {
                "type": "boolean",
                "default": true,
                "group": "post"
            },
            "show_author": {
                "type": "boolean",
                "default": true,
                "group": "post"
            },
            "show_related_posts": {
                "type": "boolean",
                "default": true,
                "group": "post"
            },
            "disqus_shortname": {
                "type": "text",
                "default": "",
                "group": "post"
            }
        },
        "card_assets": true
    }
}
